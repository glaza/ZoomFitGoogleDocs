{
    "manifest_version": 2,
    "name": "Zoom Fit Google Documents",
    "description": "This extension automatically zoom fits any opened Google document.",
    "version": "1.0",
    "icons": {
        // Combination of the following:
        // https://pixabay.com/en/app-application-arrow-back-button-1646222/
        // https://www.iconsdb.com/tropical-blue-icons/blank-file-icon.html
        "128": "icon.png"
    },
    "permissions": [
        "tabs",
        "https://docs.google.com/document/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/document/*"
            ],
            "js": [
                "jquery.js",
                "jquery.simulate.js",
                "zoomfit.js"
            ]
        }
    ]
}